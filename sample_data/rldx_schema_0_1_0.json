{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://github.com/michhernand/rldx",
	"title": "RLDX",
	"description": "A RLDX catalog",
	"type": "object",

	"properties": {
		"header": {
			"type": "object",
			"properties": {
				"rldx_schema": {
					"type": "string"
				}
			}
		},
		"contacts": {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"metadata": {
						"type": "object",
						"properties": {
							"encryption": { "type": "string" },
							"encryption_commit": { "type": ["string", "null"] }
						}
					}
				}
			}
		}
	}
}
